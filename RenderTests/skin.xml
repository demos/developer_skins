<!DOCTYPE skin>
<skin>
  <manifest>
    <title>RenderTests</title>
    <author>jclaveau</author>
    <version>1.13.0.01</version>
    <description>Tests of styling support for custom widgets</description>
    <language>en</language>
    <license>Creative Commons Attribution, Share-Alike 3.0 Unported</license>
    <attributes>
      <attribute config_key="[Master],num_decks">1</attribute>
      <attribute config_key="[Master],num_preview_decks">1</attribute>
    </attributes>
  </manifest>
  
  <ObjectName>Mixxx</ObjectName>
  <Style src="skin:style.qss"/>
  
  <MinimumSize>1024,768</MinimumSize>
  <SizePolicy>me,me</SizePolicy>
  <Layout>vertical</Layout>
  <Children>
  
    <Label>
      <Text>Working</Text>
    </Label>
    
    <WidgetGroup>
      <ObjectName>Working</ObjectName>
      <SizePolicy>me,me</SizePolicy>
      <Layout>horizontal</Layout>
      <Children>
        
        <WidgetGroup>
          <ObjectName>Left-Column</ObjectName>
          <SizePolicy>me,me</SizePolicy>
          <Layout>vertical</Layout>
          <Children>
              
            <Template src="skin:wstatuslight/wstatuslight.xml"/>
            <Template src="skin:wvumeter/wvumeter.xml"/>                                <!-- https://github.com/mixxxdj/mixxx/pull/611 -->
            <Template src="skin:wstarrating/wstarrating.xml"/>                          <!-- https://github.com/mixxxdj/mixxx/pull/613 --> 
            <Template src="skin:wslidercomposed/wslidercomposed.xml"/>
            <Template src="skin:wlibrarysidebar/wlibrarysidebar.xml"/>
            <Template src="skin:wcombobox/wcombobox.xml"/>
            
          </Children>
        </WidgetGroup>
        
        <WidgetGroup>
          <ObjectName>Right-Column</ObjectName>
          <SizePolicy>me,me</SizePolicy>
          <Layout>vertical</Layout>
          <Children>
            
            <Template src="skin:wlabel/wlabel.xml"/>
            <Template src="skin:wtime/wtime.xml"/>
            <Template src="skin:wsearchlineedit/wsearchlineedit.xml"/>
            <Template src="skin:wlibrary/wlibrary.xml"/>
            <Template src="skin:wtrackproperty/wtrackproperty.xml"/>
            <Template src="skin:wkey/wkey.xml"/>
            <Template src="skin:wtext/wtext.xml"/>
            
          </Children>
        </WidgetGroup>
        
      </Children>
    </WidgetGroup>
    
    <Label>
      <Text>Drawn but not working</Text>
    </Label>
    
    <WidgetGroup>
      <ObjectName>Partially-Working</ObjectName>
      <SizePolicy>me,me</SizePolicy>
      <Layout>horizontal</Layout>
      <Children>
        
        <WidgetGroup>
          <ObjectName>Left-Column</ObjectName>
          <SizePolicy>me,me</SizePolicy>
          <Layout>vertical</Layout>
          <Children>
            <Template src="skin:wspinny/wspinny.xml"/>
            <Template src="skin:wcoverart/wcoverart.xml"/>
            <Template src="skin:wknobcomposed/wknobcomposed.xml"/>
            <Template src="skin:wpushbutton/wpushbutton.xml"/>
            <Template src="skin:wknob/wknob.xml"/>
            
          </Children>
        </WidgetGroup>
        
        <WidgetGroup>
          <ObjectName>Right-Column</ObjectName>
          <SizePolicy>me,me</SizePolicy>
          <Layout>vertical</Layout>
          <Children>
            
          </Children>
        </WidgetGroup>
        
      </Children>
    </WidgetGroup>
    
    <Label>
      <Text>Not drawn</Text>
    </Label>
    
    <WidgetGroup>
      <ObjectName>Not-Working</ObjectName>
      <SizePolicy>me,me</SizePolicy>
      <Layout>horizontal</Layout>
      <Children>
        
          <!-- TODO :
          + wtracktext
          + splitter
          + EffectPushButton
          + Text
          + Display
          + NumberRate
          + NumberPos
          + Number
          + NumberDb
          + TableView
          + WidgetGroup
          + WidgetStack
          + SizeAwareStack
          + EffectChainName
          + EffectName
          + EffectParameterName
          + EffectButtonParameterName
          + SingletonDefinition
          + SingletonContainer
          -->
            
        <WidgetGroup>
          <ObjectName>Left-Column</ObjectName>
          <SizePolicy>me,me</SizePolicy>
          <Layout>vertical</Layout>
          <Children>
            
            <Template src="skin:woverview/woverview.xml"/>
            <Template src="skin:wvisual/wvisual.xml"/>
            
          </Children>
        </WidgetGroup>
        
        <WidgetGroup>
          <ObjectName>Right-Column</ObjectName>
          <SizePolicy>me,me</SizePolicy>
          <Layout>vertical</Layout>
          <Children>
            
          </Children>
        </WidgetGroup>
        
      </Children>
    </WidgetGroup>
    
  </Children>
</skin>
