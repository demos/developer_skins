<!DOCTYPE template>
<!--
Description: vumeter.
-->
<Template>
    
    <WidgetGroup>
      <ObjectName>Row</ObjectName>
      <Layout>horizontal</Layout>
      <SizePolicy>me,max</SizePolicy>
      <Children>
        
        <Label>
            <ObjectName>WidgetName</ObjectName>
            <Size>150,-1</Size>
            <Text>WVuMeter</Text>
        </Label>
        
        <!-- variables used by the SVG -->
        <SetVariable name="vumeter_height" expression="50"/>
        <SetVariable name="vumeter_width" expression="15"/>
        <SetVariable name="margin" expression="0"/>
        
        <!-- vertical -->
        <WidgetGroup>
          <ObjectName>Wrapper</ObjectName>
          <Layout>horizontal</Layout>
          <SizePolicy>max,max</SizePolicy>
          <Children>
            <VuMeter>
                <ObjectName>NoStyle</ObjectName>
                <TooltipId>channel_VuMeter</TooltipId>
                <PathVu>wvumeter/vumeter_on.svg</PathVu>
                <PathBack>wvumeter/vumeter_off.svg</PathBack>
                <Horizontal>false</Horizontal>
                <PeakHoldSize><Variable name="vumeter_height"/></PeakHoldSize>
                <PeakHoldTime>500</PeakHoldTime>
                <PeakFallTime>50</PeakFallTime>
                <PeakFallStep>0</PeakFallStep>
            </VuMeter>
          </Children>
        </WidgetGroup>
        
        <WidgetGroup>
          <ObjectName>Wrapper</ObjectName>
          <Layout>horizontal</Layout>
          <SizePolicy>max,max</SizePolicy>
          <Children>
            <VuMeter>
                <ObjectName>PositiveBox</ObjectName>
                <TooltipId>channel_VuMeter</TooltipId>
                <PathVu>wvumeter/vumeter_on.svg</PathVu>
                <PathBack>wvumeter/vumeter_off.svg</PathBack>
                <Horizontal>false</Horizontal>
                <PeakHoldSize><Variable name="vumeter_height"/></PeakHoldSize>
                <PeakHoldTime>500</PeakHoldTime>
                <PeakFallTime>50</PeakFallTime>
                <PeakFallStep>0</PeakFallStep>
            </VuMeter>
          </Children>
        </WidgetGroup>
        
        
        <!-- horizontal -->
        <WidgetGroup>
          <ObjectName>Wrapper</ObjectName>
          <Layout>horizontal</Layout>
          <SizePolicy>max,max</SizePolicy>
          <Children>
            <VuMeter>
                <ObjectName>NoStyle</ObjectName>
                <TooltipId>channel_VuMeter</TooltipId>
                <PathVu>wvumeter/vumeter_on.svg</PathVu>
                <PathBack>wvumeter/vumeter_off.svg</PathBack>
                <Horizontal>true</Horizontal>
                <PeakHoldSize><Variable name="vumeter_height"/></PeakHoldSize>
                <PeakHoldTime>500</PeakHoldTime>
                <PeakFallTime>50</PeakFallTime>
                <PeakFallStep>0</PeakFallStep>
            </VuMeter>
          </Children>
        </WidgetGroup>
        
        <WidgetGroup>
          <ObjectName>Wrapper</ObjectName>
          <Layout>horizontal</Layout>
          <SizePolicy>max,max</SizePolicy>
          <Children>
            <VuMeter>
                <ObjectName>PositiveBox</ObjectName>
                <TooltipId>channel_VuMeter</TooltipId>
                <PathVu>wvumeter/vumeter_on.svg</PathVu>
                <PathBack>wvumeter/vumeter_off.svg</PathBack>
                <Horizontal>true</Horizontal>
                <PeakHoldSize><Variable name="vumeter_height"/></PeakHoldSize>
                <PeakHoldTime>500</PeakHoldTime>
                <PeakFallTime>50</PeakFallTime>
                <PeakFallStep>0</PeakFallStep>
            </VuMeter>
          </Children>
        </WidgetGroup>
        
      </Children>
    </WidgetGroup>

</Template>
